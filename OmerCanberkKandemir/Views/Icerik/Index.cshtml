@model IEnumerable<OmerCanberkKandemir.Models.Model.Icerik>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="arkaicerik">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kullanici.kullaniciadi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Başlık)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.icerik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResimURL)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kullanici.kullaniciadi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Başlık)
                </td>
                <td>
                    @Html.Raw(item.icerik);
                </td>
                <td>
                    <img src="@item.ResimURL" width="100" height="100" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IcerikID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IcerikID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IcerikID })
                </td>
            </tr>
        }

    </table>
<p>
    @Html.ActionLink("İçerik Oluştur", "Create")
</p>
</div>